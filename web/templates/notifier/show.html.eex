<script>
    window.options = {
        applications: <%= raw @applications %>,
        eventNames: <%= raw @event_names %>,
        keys: <%= raw @event_keys %>,
    };

    window.notifier = <%= raw @notifier_as_json %>;
</script>

<div id="rules">
    <div id="content"></div>
</div>

<%= link "delete", to: notifier_path(@conn, :delete, @notifier), method: :delete, data: [confirm: "Are you sure?"] %>

<script src="<%= static_path(@conn, "/js/app.js") %>"></script>
